<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/loading_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@color/bg_color"
              android:gravity="center"
              android:orientation="horizontal">

    <include layout="@layout/layout_progress_bar_rotate_small"/>

    <TextView
        android:id="@+id/status_hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_loading_text_margin"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/common_loading_text_lines_spacing"
        android:paddingTop="2dp"
        android:maxLines="2"
        android:text="加载中..."
        android:textColor="@color/status_view_text_color"
        android:textSize="14sp"
        android:visibility="visible"/>
</LinearLayout>
