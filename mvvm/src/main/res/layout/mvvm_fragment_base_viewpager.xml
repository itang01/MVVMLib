<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.itang.mvvm.jetpack.t2vm.BaseViewPagerViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:background="@color/white"
            tl:tl_divider_width="0dp"
            tl:tl_indicator_color="@color/font_black"
            tl:tl_indicator_height="1.5dp"
            tl:tl_indicator_width_equal_title="false"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="@color/font_black"
            tl:tl_textUnselectColor="@color/font_gray_9" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</layout>